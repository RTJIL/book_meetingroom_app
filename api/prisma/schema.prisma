generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String

  role Role @default(User)

  createdRooms Room[]    @relation("AdminCreatedRooms")
  bookedRooms  Room[]    @relation("UserBookings")
  Booking      Booking[]
}

model Room {
  id    Int @id @default(autoincrement())
  cost  Int
  space Int

  photo       String
  location    String
  description String

  createdBy   User? @relation("AdminCreatedRooms", fields: [createdById], references: [id])
  createdById Int?

  users   User[]    @relation("UserBookings")
  Booking Booking[]
}

model Booking {
  id Int @id @default(autoincrement())

  room   Room @relation(fields: [roomId], references: [id])
  roomId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  startTime DateTime
  endTime   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roomId, startTime, endTime])
}

enum Role {
  Admin
  User
}
